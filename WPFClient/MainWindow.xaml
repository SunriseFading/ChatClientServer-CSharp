        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="MessagesLB" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,66,110"/>
        <TextBox x:Name="UserNameTB" HorizontalAlignment="Left" Margin="10,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="312"/>
        <TextBox x:Name="MessageTB" HorizontalAlignment="Left" Margin="10,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="623"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="657,354,0,0" VerticalAlignment="Top" Height="40" Width="77"/>

    </Grid>
</Window>
